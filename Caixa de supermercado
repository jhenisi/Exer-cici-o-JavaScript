produto = prompt("PRODUTO")
preco = Number(prompt("PREÇO").replace(',','.'))

soma = 0

while (produto != 0) {
  console.log("PRODUTO: " + produto + " | VALOR: " + preco.toFixed(2))
  soma += preco
    produto = prompt("PRODUTO")
    preco = Number(prompt("PREÇO").replace(',','.'))
} 

console.log("TOTAL DE COMPRAS: " + soma.toFixed(2))
