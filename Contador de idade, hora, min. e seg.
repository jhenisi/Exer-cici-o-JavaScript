idade = 0
dias = 0
horas = 0
minutos = 0 
segundos = 0

idade = prompt("Quantos anos você tem?")

dias = (idade * 365)
horas = (dias * 24)
minutos = (horas * 60)
segundos = (minutos * 60)

console.log ("Você tem " + idade + " anos; " + dias + " dias; " + horas + "horas; " + minutos + " minutos; " + segundos + " segundos")
